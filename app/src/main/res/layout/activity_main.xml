<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 타이틀 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스마트홈"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 다크모드 스위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imgSun"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/imgsun"
                android:contentDescription="라이트모드" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/imgMoon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/imgmoon"
                android:contentDescription="다크모드" />
        </LinearLayout>

        <!-- 2분할 가로 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <!-- 조도 센서 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="조도 센서"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <Switch
                            android:id="@+id/switchLightSensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLuminance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--- lux"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FF6D00"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressLux"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="1000"
                        android:progress="0"
                        android:progressTint="#4CAF50"
                        android:backgroundTint="#E0E0E0"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLuxStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- RGB LED 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="RGB LED"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <Switch
                            android:id="@+id/switchLed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- 원형 색상 미리보기 -->
                    <View
                        android:id="@+id/viewColorPreview"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#000000"
                        android:layout_marginBottom="16dp"
                        android:clipToOutline="true"
                        android:outlineProvider="background"
                        android:rotation="0" />

                    <!-- HSV 슬라이더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="색조 (H)"
                            android:textColor="#E53935"
                            android:textStyle="bold" />
                        <SeekBar
                            android:id="@+id/seekBarHue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="360" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="채도 (S)"
                            android:textColor="#43A047"
                            android:textStyle="bold" />
                        <SeekBar
                            android:id="@+id/seekBarSaturation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="명도 (V)"
                            android:textColor="#1E88E5"
                            android:textStyle="bold" />
                        <SeekBar
                            android:id="@+id/seekBarValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Gemini 버튼: 다크/라이트 모드에 따라 배경색 변경 -->
        <!-- Gemini 버튼: 다크/라이트 모드에 따라 배경색 변경 -->
        <FrameLayout
            android:id="@+id/btnVoiceControl"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:rotation="45"
            android:clickable="true"
            android:focusable="true"
            android:background="#1976D2"> <!-- 기본 파란색 -->

            <TextView
                android:id="@+id/tvGeminiButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rotation="-45"
                android:text="Gemini로\n제어"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />
        </FrameLayout>


    </LinearLayout>
</ScrollView>
