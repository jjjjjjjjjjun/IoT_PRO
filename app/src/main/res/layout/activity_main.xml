<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 타이틀 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스마트홈"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 조도 센서 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조도 센서"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLightSensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="현재 밝기"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvLuminance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--- lux"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#FF6D00"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/progressLux"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:max="1000"
                    android:progress="0"
                    android:progressTint="#4CAF50"
                    android:backgroundTint="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvLuxStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LCD 제어 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LCD 제어판"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLcd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/etLcdText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="영어 32자 이내"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnLcdSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="전송"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF4081"
                    android:layout_gravity="end" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RGB LED 제어 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RGB LED 제어"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewColorPreview"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#000000"
                    android:layout_marginBottom="20dp" />

                <!-- R 슬라이더 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R"
                        android:textColor="#E53935"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBarRed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvRedValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- G 슬라이더 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="G"
                        android:textColor="#43A047"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBarGreen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvGreenValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- B 슬라이더 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textColor="#1E88E5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekBarBlue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvBlueValue"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gemini 음성 제어 버튼 -->
        <Button
            android:id="@+id/btnVoiceControl"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Gemini로 제어"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#1976D2"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:elevation="12dp" />
    </LinearLayout>
</ScrollView>